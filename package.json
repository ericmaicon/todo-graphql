{
  "name": "todo",
  "version": "1.0.0",
  "scripts": {
    "dev": "ts-node -r tsconfig-paths/register src/index.ts",
    "dev:test": "DOTENV_CONFIG_PATH=.env.test ts-node -r tsconfig-paths/register src/index.ts",
    "compile": "tsup",
    "start": "node -r tsconfig-paths/register ./dist/index.js",
    "lint": "tsc -b && eslint ./src --ext .ts",
    "prepare": "husky",
    "commit": "cz",
    "test": "jest",
    "coverage": "jest --coverage",
    "test:integration": "npx playwright test",
    "codegen": "graphql-codegen --config codegen.ts"
  },
  "author": "Eric Maicon",
  "license": "ISC",
  "description": "TODO graphQL Server",
  "dependencies": {
    "@apollo/server": "^5.0.0",
    "@as-integrations/express5": "^1.1.2",
    "@graphql-codegen/typescript-resolvers": "^5.0.0",
    "@graphql-tools/schema": "^10.0.25",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "express": "^5.1.0",
    "graphql": "^16.11.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "pino": "^9.9.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@graphql-codegen/cli": "^6.0.0",
    "@playwright/test": "^1.55.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.5.0",
    "@types/pg": "^8.15.5",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "jiti": "^2.5.1",
    "lint-staged": "^16.1.6",
    "prettier": "3.6.2",
    "semantic-release": "^24.2.8",
    "ts-jest": "^29.4.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.5.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0"
  },
  "lint-staged": {
    "src/**/*.(ts|js)": [
      "npm run lint",
      "npm run test"
    ]
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true",
      "pre-commit": "lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
